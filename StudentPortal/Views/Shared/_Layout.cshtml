<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - StudentPortal</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/css/Style.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/StudentPortal.styles.css" asp-append-version="true" />
</head>
<body>
	<div class="container">
		<header>
			<nav class="navbar navbar-expand-sm navbar-toggleable-sm mb-3">
				<div class="container-fluid">
					<a class="navbar-brand fw-bolder" style="color:#503c97" asp-area="" asp-controller="Home" asp-action="Index">Student Portal</a>
					<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
							aria-expanded="false" aria-label="Toggle navigation">
						<span class="navbar-toggler-icon"></span>
					</button>
					<div class="navbar-collapse collapse d-flex justify-content-end">
						<ul class="navbar-nav">
							<li class="nav-item">
								<a class="nav-link fw-bold" style="color:#503c97;" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
							</li>

							<li class="nav-item">
								<a class="nav-link fw-bold ms-3" style="color:#503c97;" asp-area="" asp-controller="Students" asp-action="List">List</a>
							</li>

							<li class="nav-item">
								<a style="background:#6247bb; color:white" class="btn rounded-pill px-4 ms-4" asp-area="" asp-controller="Students" asp-action="Add">Add</a>
							</li>
						</ul>
					</div>
				</div>
			</nav>
		</header>
	</div>
	<div class="container">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<footer class="border-top footer text-muted">
		<div class="container" style="text-align:center;">
			&copy; 2024 - StudentPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
